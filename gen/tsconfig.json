{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "esModuleInterop": true,
        "sourceRoot": ".",
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",

        "types": [
            "node"
        ]
    },
    "files": [
        "index.ts"
    ]
}
